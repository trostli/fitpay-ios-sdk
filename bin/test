#!/usr/bin/env bash

if [ -z "$1" ]; then
    echo "defaulting to iPhone 6s simulator"
    xctool -workspace FitpaySDK.xcworkspace -scheme FitpaySDK -sdk iphonesimulator -destination 'platform=iOS Simulator,name=iPhone 6s' test
else
    xctool -workspace FitpaySDK.xcworkspace -scheme FitpaySDK -sdk iphonesimulator -destination "platform=iOS Simulator,name=$1" test
fi
